{
  "extends": "stylelint-config-recommended",
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["extends", "tailwind", "layer", "screen", "variants", "media"]
      }
    ],
    "block-no-empty": null,
    "unit-allowed-list": ["em", "rem", "s", "px", "%", "vh", "deg", "ms"]
  }
}
