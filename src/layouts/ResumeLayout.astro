---
const { title, summary, keywords, publishedAt } = Astro.props

const url = new URL(Astro.url.pathname, Astro.site)
---

<html lang="en">
  <head>
    <title>{title}</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="initial-scale=1.0, width=device-width" />
    <link rel="canonical" href={url} />
    <meta name="robots" content="noindex, nofollow" />

    <meta name="author" content="vanntile" />
    <meta name="description" content={summary} />
    <meta name="keywords" content={keywords.join(', ')} />
    <meta property="article:published_time" content={new Date(publishedAt).toISOString()} />

    <link rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicons/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png" />
    <link rel="manifest" href="/favicons/manifest.json" />
    <link rel="shortcut icon" href="/favicons/favicon.ico" />
    <meta name="apple-mobile-web-app-title" content="vanntile.com" />
    <meta name="application-name" content="vanntile.com" />
    <meta name="theme-color" content="#3429aa" />
    <meta name="color-scheme" content="dark light" />
    <link rel="preload" href="/fonts/Objectivity-Regular.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/fonts/Objectivity-Bold.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
  </head>
  <body>
    <slot />
  </body>
</html>
